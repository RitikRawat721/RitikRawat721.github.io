datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  excerpt   String
  content   String?
  createdAt DateTime @default(now())
}

model Resource {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  desc      String?
  createdAt DateTime @default(now())
}
